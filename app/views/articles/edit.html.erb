<h1>Edit an Article</h1>

<%= form_for(@article) do |f| %>
	<ul>
		<% @article.errors.full_messages.each do |error| %>
	<li><%= error %></li>
	<% end %>
	
	</ul>

	<div class="form-group">
		<%= f.label :title %>
		<%= f.text_field :title, class: "form-control" %>
	</div>

	<p>
		<%= f.submit %>
	</p>

<% end %>
